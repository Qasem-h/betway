@model IEnumerable<Domain.Entities.Models.Shift>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <header>
                <div class="icons">
                    <i class="fa fa-table"></i>
                </div>
                <h5>Shifts</h5>
            </header>
            <div id="collapse4" class="body">
                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.startdate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.enddate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Assignedby)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.isclosed)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.startcash)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.endcash)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.endcash)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.endcash)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.endcash)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.assignedto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Terminal.TerminalName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.startdate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.enddate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Assignedby)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.isclosed)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.startcash)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.endcash)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.endcash)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.endcash)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.endcash)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.assignedto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Terminal.TerminalName)
                                </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div><!-- /.row -->
